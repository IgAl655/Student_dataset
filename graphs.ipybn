# 3. Влияние образования родителей
order = ['None', 'High School', 'Some College', "Bachelor's", "Master's", 'Doctorate']
plt.figure(figsize=(10,6))
sns.barplot(data=dataflow, x='ParentalEducation', y='GPA_numeric', order=order)
plt.xticks(rotation=15)
plt.title('Влияние образования родителей на GPA')
plt.show()
<img width="1066" height="688" alt="image" src="https://github.com/user-attachments/assets/cf4a3def-73c3-475f-8efc-7c45094f1bc8" />


# 4. Часы учёбы → GPA
plt.figure(figsize=(8,6))
sns.boxplot(data=dataflow, x='study_hours', y='GPA_numeric', order=['low','medium','high'])
plt.title('Зависимость GPA от времени на учёбу')
plt.show()
